<!DOCTYPE html>
    <html>
    <head>
        <title>Select Report</title>
        <style>
           
            #reportSelector {
                padding: 10px;
                font-size: 16px;
                border: 1px solid #ccc;
                border-radius: 5px;
                background-color: #fff;
                color: #333;
                cursor: pointer;
            }
             
                #reportSelector option {
                    padding: 10px;
                    font-size: 16px;
                    background-color: #fff;
                    color: #333;
                }
                   
                    #reportSelector option:hover {
                        background-color: #f0f0f0;
                    }

                    #reportSelector option:checked {
                        background-color: #007bff;
                        color: #fff;
                    }
        </style>
    </head>
    <body>
        <select id="reportSelector">
            <option value="select">Select</option>
            <option value="Transaction">Transaction</option>
            <option value="sales">Sales</option>
            <option value="See">See</option>
        </select>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#reportSelector').change(function () {
                    var selectedValue = $(this).val();
                    if (selectedValue === 'Transaction') {
                        window.location.href = '/Home/Transaction';

                    }
                    if (selectedValue === 'See') {
                        window.location.href = '/Home/See';

                    }
                    if (selectedValue === 'sales') {
                        window.location.href = '/Home/Sales';
                    }
                });
            });
        </script>
    </body>
    </html>

